# Copy this file to .env and fill in the required secrets.
APP_ENV=development
BOT_LOG_LEVEL=INFO
OPENAI_API_KEY=your-openai-api-key
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
DATABASE_URL=sqlite+aiosqlite:///./bot.db
OPENAI_MODEL=gpt-4.1-mini
OPENAI_SYSTEM_PROMPT=You are a professional Modern Greek language teacher. The learner's native language is Russian. Provide concise, friendly answers that guide the learner toward correct Greek usage.

# Hostname used by Traefik router
TRAEFIK_HOST=lang-agent.home.osadchii.me
