# Copy this file to .env and fill in the required secrets.
APP_ENV=development
BOT_LOG_LEVEL=INFO
OPENAI_API_KEY=your-openai-api-key
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Telegram webhook URL
# You can reference other variables using ${VARIABLE_NAME} syntax
# Example: https://${TRAEFIK_API_HOST}/api/telegram/webhook
# Leave empty to disable webhook mode
TELEGRAM_WEBHOOK_URL=https://${TRAEFIK_API_HOST}/api/telegram/webhook

# Security: Require Telegram authentication in production
# Set to "true" to enforce cryptographic validation of Telegram initData
# Set to "false" for local development to allow X-User-* header authentication
REQUIRE_TELEGRAM_AUTH=false
DB_DRIVER=postgresql+asyncpg
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lang_agent
DB_USER=postgres
DB_PASSWORD=postgres
OPENAI_MODEL=gpt-4.1-mini
OPENAI_SYSTEM_PROMPT=You are a professional Modern Greek language teacher. The learner's native language is Russian. Provide concise, friendly answers that guide the learner toward correct Greek usage.

# Hostname used by Traefik router (frontend)
TRAEFIK_HOST=lang-agent.home.osadchii.me

# API hostname used by Traefik router (backend API)
TRAEFIK_API_HOST=lang-agent-api.home.osadchii.me

# Mini app configuration for local development
# Use 127.0.0.1 for local backend or your actual API URL
VITE_API_BASE_URL=http://127.0.0.1:8000/api
VITE_USER_ID=1
VITE_USER_USERNAME=demo
VITE_USER_FIRST_NAME=Mini
VITE_USER_LAST_NAME=App
