# syntax=docker/dockerfile:1.6

FROM node:20-alpine AS builder

WORKDIR /app

ARG VITE_API_BASE_URL
ARG VITE_USER_ID
ARG VITE_USER_USERNAME
ARG VITE_USER_FIRST_NAME
ARG VITE_USER_LAST_NAME

# Make Vite env available during build only
ENV VITE_API_BASE_URL=${VITE_API_BASE_URL}
ENV VITE_USER_ID=${VITE_USER_ID}
ENV VITE_USER_USERNAME=${VITE_USER_USERNAME}
ENV VITE_USER_FIRST_NAME=${VITE_USER_FIRST_NAME}
ENV VITE_USER_LAST_NAME=${VITE_USER_LAST_NAME}

COPY apps/frontend/package*.json ./
RUN npm install

COPY apps/frontend/ .
RUN npm run build

FROM nginx:1.27-alpine

ENV NODE_ENV=production

COPY --from=builder /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
